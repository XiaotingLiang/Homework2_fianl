<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/chartname"
        android:layout_width="186dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:text="namenamename"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chartprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="140dp"

        android:layout_marginBottom="16dp"
        android:text="$10"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/chartx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="X"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/chartprice"
        app:layout_constraintTop_toBottomOf="@+id/chartname" />

    <TextView
        android:id="@+id/chartnumber"
        android:layout_width="29dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="28dp"
        android:text="5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chartname" />

    <ImageView
        android:id="@+id/chartimage"
        android:layout_width="139dp"
        android:layout_height="108dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>
